
@{
    ViewBag.Title = "Password";
}
@model AdminPortal.Models.UserViewModel


<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-xl-12">
            <div class="nav-align-top nav-tabs-shadow mb-4">
                <ul class="nav nav-tabs " role="tablist">
                    <li class="nav-item">
                        <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#data" aria-controls="navs-justified-home" aria-selected="true"><i class="tf-icons ti ti-database ti-xs me-1"></i> Data </button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="form" role="tabpanel">
                        <!-- Basic Layout & Basic with Icons -->
                        <div class="row" id="app">
                            <!-- Basic Layout -->
                            <div class="col-xxl">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        @using (Html.BeginForm("Save", null, FormMethod.Post, new { id = "xForm", @class = "", enctype = "multipart/form-data" }))
                                        {
                                            @Html.HiddenFor(m => m.ID)
                                            <div class="row mb-3">
                                                <label class="col-sm-2 col-form-label" for="Name">Current Password</label>
                                                <div class="col-sm-10">
                                                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", pattern = @"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$#!%*?&]{8,}$" })
                                                    @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label class="col-sm-2 col-form-label" for="Name">New Password</label>
                                                <div class="col-sm-10">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", pattern = @"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$#!%*?&]{8,}$" })
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label class="col-sm-2 col-form-label" for="Name">Confirm Password</label>
                                                <div class="col-sm-10">
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", pattern = @"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$#!%*?&]{8,}$" })
                                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="row justify-content-end mt-4">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-success float-end"><i class="fa fa-save"></i> &nbsp;Save</button>
                                                    <button type="button" onclick="window.location.reload()" class="btn btn-danger float-end mx-2"><i class="fa fa-cancel"></i> &nbsp;Cancel</button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/Scripts/jquery.validate.js"></script>

    <script>
        $(document).ready(function () {
            $("#xForm").submit(function (event) {
                event.preventDefault();
                if ($(this).valid()) {
                    $.ajax({
                        type: "POST",
                        url: "Save",
                        data: $('form').serialize(),
                        dataType: "json",
                        encode: true,
                        success: function (o) {
                            toastr.success(o);
                            $('input[type=password]').val('');
                            //window.location.reload();
                        }
                    });
                }

            });
        });
    </script>
}
