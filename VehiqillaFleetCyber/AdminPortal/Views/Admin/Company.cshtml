
@{
    ViewBag.Title = "Companies";
}
@using AdminPortal.Models
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-xl-12">
            <div class="nav-align-top nav-tabs-shadow mb-4">
                <ul class="nav nav-tabs " role="tablist">
                    <li class="nav-item">
                        <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#data" aria-controls="navs-justified-home" aria-selected="true"><i class="tf-icons ti ti-database ti-xs me-1"></i> Data </button>
                    </li>
                    <li class="nav-item">
                        <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#form" aria-controls="navs-justified-profile" aria-selected="false"><i class="tf-icons ti ti-keyboard ti-xs me-1"></i> Record</button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="data" role="tabpanel">
                        <table class="datatables-basic table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in Model)
                                {
                                    <tr>
                                        <td>@m.ID</td>
                                        <td>@m.Name</td>
                                        <td><button class="btn btn-sm btn-warning"><i class="fa fa-pencil"></i></button><button class="btn btn-sm btn-danger ms-2"><i class="fa fa-trash"></i></button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="form" role="tabpanel">
                        <!-- Basic Layout & Basic with Icons -->
                        <div class="row"  id="app">
                            <!-- Basic Layout -->
                            <div class="col-xxl">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <form @@submit.prevent="handleSubmit" encytpe="multipart/form-data">
                                            <div class="row mb-3">
                                                <label class="col-sm-2 col-form-label" for="Name">Company Name</label>
                                                <div class="col-sm-10">
                                                    <input type="text" v-model="vm.Name" class="form-control" id="Name" required />
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label class="col-sm-2 col-form-label" for="Name">Company Url</label>
                                                <div class="col-sm-10">
                                                    <input type="text" v-model="vm.Url" class="form-control" id="Name" required />
                                                </div>
                                            </div>
                                            <div class="row mb-4">
                                                <div class="col-sm-8">
                                                    <h5>Company Users</h5>
                                                    <p class="text-danger">* Users are created with default password P@ssword@1</p>
                                                </div>
                                                <div class="col-sm-4 ">
                                                    <button type="button" @@click="addItem()" class="btn btn-primary float-end"><i class="fa fa-plus"></i> Add User</button>
                                                </div>
                                            </div>
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>User Name</th>
                                                        <th>Email</th>
                                                        <th>Phone</th>
                                                        <th>Address</th>
                                                        <th width="200">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr v-for="(item,i) in vm.Users" :key="i">
                                                        <td>
                                                            <input type="text" v-model="item.Name" class="form-control" required />

                                                        </td>
                                                        <td>
                                                            <input type="text" v-model="item.UserName" class="form-control" required />
                                                        </td>
                                                        <td>
                                                            <input type="email" v-model="item.Email" class="form-control" required />
                                                        </td>
                                                        <td>
                                                            <input type="text" v-model="item.Phone" class="form-control" required />
                                                        </td>
                                                        <td>
                                                            <input type="text" v-model="item.Address" class="form-control" required />
                                                        </td>
                                                        <td>
                                                            <button type="button" @@click="changePassword(item)" class="btn btn-sm btn-warning mx-1 float-end"><i class="fa fa-key"></i></button>
                                                            <button type="button" @@click="remove(i)" class="btn btn-sm btn-danger float-end"><i class="fa fa-trash"></i></button>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                            <div class="row justify-content-end mt-4">
                                                <div class="col-sm-10">
                                                    <button type="submit" class="btn btn-success float-end"><i class="fa fa-save"></i> &nbsp;Save</button>
                                                    <button type="button" onclick="window.location.reload()" class="btn btn-danger float-end mx-2"><i class="fa fa-cancel"></i> &nbsp;Cancel</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        var dt;
        dt = $('.datatables-basic').DataTable(options);
    </script>
    <script>
        var vueContent = new Vue({
            el: '#app',
            data: {
                vm: {
                    ID: 0,
                    Name: null,
                    Users: [{ ID: 0, Email: null, Phone: null, Address: null, Name: null, UserName:null }],
                },
            },
            methods: {
                handleSubmit() {
                    axios.post('/Admin/company', JSON.stringify(this.vm), {
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    }).then(response => {
                        if (response.data.Message == "success") {
                            window.location.reload();
                        }
                        else {
                            Swal.fire({
                                title: 'Error!',
                                text: 'An Error has occured please contact System Administrator.',
                                icon: 'error',
                                showConfirmButton: false
                            });
                        }
                    }).catch(error => {
                        Swal.fire({
                            title: 'Error!',
                            text: 'An Error has occured please contact System Administrator.',
                            icon: 'error',
                            showConfirmButton: false
                        })
                    })
                },
                addItem() {
                    this.vm.Users.push({ ID: 0, Email: null, Phone: null, Address: null, Name: null, UserName: null });
                },
                remove(index) {
                    if (this.vm.Users.length == 1) {
                        alert("Atleast one item is requried");
                        return false;
                    }
                    let confirm = window.confirm("Are you sure you want to delete this item?");
                    if (confirm) {
                        this.vm.Users.splice(index, 1);
                        toastr.error("User deleted!");
                    }
                },
                LoadDropdowns() {
                 
                }
            },
            beforeMount() {
               // this.LoadDropdowns()
            },
        });
    </script>
}
